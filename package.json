{
    "name": "erp_hackathon",
    "version": "1.0.0",
    "description": "ERP Incident Reporting System",
    "main": "server.js",
    "scripts": {
        "client-install": "npm install --prefix client",
        "start": "node server.js",
        "server": "nodemon server.js",
        "client": "npm start --prefix client",
        "dev": "concurrently \"npm run server\" \"npm run client\" ",
        "heroku-postbuild": "npm run start && NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TomiMustapha/erp_hackathon.git"
    },
    "author": "Cool Kids",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/TomiMustapha/erp_hackathon/issues"
    },
    "homepage": "https://github.com/TomiMustapha/erp_hackathon#readme",
    "devDependencies": {
        "node-dev": "^3.1.3",
        "nodemon": "^1.18.3"
    },
    "dependencies": {
        "body-parser": "^1.18.3",
        "concurrently": "^3.6.1",
        "create-react-app": "^1.5.2",
        "express": "^4.16.3",
        "gridfs-stream": "^1.1.1",
        "method-override": "^3.0.0",
        "mongoose": "^5.2.5",
        "multer": "^1.3.1",
        "multer-gridfs-storage": "^3.0.1",
        "react-scripts": "^1.1.4"
    },
    "engines": {
        "node": "8.11.2",
        "npm": "5.6.0"
    }
